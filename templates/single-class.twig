{% extends "templates/base.twig" %}

{% block content %}

    {% for post in posts %}

        <article {{ function('post_class') }}>
            <header>
                <h1 class="entry-title">{{ post.title }}</h1>
            </header>
            <div class="entry-content">

<div class="intro-text">
     {{post.get_field('my_wysiwyg_field')}}
</div>


                {{ post.content }}

                {# class_type : <pre>{{ class_type | print_r }}</pre><br><br> #}
                class_type : <pre>{{ class_type | print_r }}</pre><br><br>
                {% for a in class_type %}
                    {{ a.name }}, 

                {% endfor %}
                meta : <pre>{{ meta | print_r }}</pre><br><br>
                post :<pre> {{ post | print_r }} </pre><br><br>
                http_host : {{ http_host }}<br><br>
                guid : {{ post.guid }}<br><br>

            </div>
        </article>

    {% endfor %}

{% endblock %}